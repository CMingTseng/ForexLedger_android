<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/widget_normal_spacing</item>
        <item name="hintTextColor">@color/brown1</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">@dimen/edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_2</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DropdownEditText" parent="EditText">
        <item name="paddingEnd">10dp</item>
        <item name="android:drawableEnd">@drawable/icon_drop_down_arrow</item>
        <item name="android:editable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BookInfoCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EntryCardPrimaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>